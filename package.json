{
    "name": "@larislab/ui",
    "version": "1.4.1",
    "description": "UI react component library based on shadcn/ui",
    "homepage": "https://github.com/LarisLab/ui",
    "bugs": {
        "url": "https://github.com/LarisLab/ui/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LarisLab/ui.git"
    },
    "license": "MIT",
    "author": "Laris Lab",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/ui.modern.js",
            "require": "./dist/ui.cjs",
            "default": "./dist/ui.modern.js",
            "types": "./dist/index.d.ts"
        },
        "./plugin": {
            "import": "./plugin.mjs",
            "default": "./plugin.mjs"
        }
    },
    "main": "./dist/ui.cjs",
    "module": "./dist/ui.esm.js",
    "source": "src/index.ts",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "plugin.mjs",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "microbundle --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --globals react/jsx-runtime=jsx --format modern,cjs,esm --css inline --compress false",
        "build-storybook": "storybook build",
        "storybook": "storybook dev --no-open -p 6006",
        "test": "echo \"no tests available\""
    },
    "browserslist": [
        "defaults"
    ],
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": true
    },
    "release": {
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            "next",
            "next-major",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.1",
        "@radix-ui/react-accordion": "^1.2.2",
        "@radix-ui/react-alert-dialog": "^1.1.4",
        "@radix-ui/react-avatar": "^1.1.2",
        "@radix-ui/react-checkbox": "^1.1.3",
        "@radix-ui/react-collapsible": "^1.1.2",
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-dropdown-menu": "^2.1.4",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-radio-group": "^1.2.2",
        "@radix-ui/react-scroll-area": "^1.2.2",
        "@radix-ui/react-select": "^2.1.4",
        "@radix-ui/react-separator": "^1.1.1",
        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-switch": "^1.1.2",
        "@radix-ui/react-tabs": "^1.1.2",
        "@radix-ui/react-toast": "^1.2.4",
        "@radix-ui/react-toggle": "^1.1.1",
        "@radix-ui/react-toggle-group": "^1.1.1",
        "@radix-ui/react-tooltip": "^1.1.6",
        "class-variance-authority": "^0.7.1",
        "react-hook-form": "^7.54.1",
        "tailwind-merge": "^2.5.5"
    },
    "devDependencies": {
        "@fontsource-variable/inter": "^5.1.0",
        "@storybook/addon-essentials": "^8.4.7",
        "@storybook/react": "^8.4.7",
        "@storybook/react-vite": "^8.4.7",
        "@types/react-dom": "^19.0.2",
        "microbundle": "^0.15.1",
        "storybook": "^8.4.7",
        "tailwind": "^4.0.0",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.7.2"
    },
    "peerDependencies": {
        "lucide-react": "*",
        "react": "*",
        "react-dom": "*",
        "tailwindcss": "*"
    },
    "publishConfig": {
        "access": "public"
    },
    "postcss": {
        "plugins": {
            "tailwindcss": {}
        }
    }
}
