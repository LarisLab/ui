{
    "name": "@larislab/ui",
    "version": "1.0.0",
    "description": "UI components for React based on Shadcn",
    "homepage": "https://github.com/LarisLab/ui",
    "bugs": {
        "url": "https://github.com/LarisLab/ui/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LarisLab/ui.git"
    },
    "license": "MIT",
    "author": "Laris Lab",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/ui.modern.js",
            "require": "./dist/ui.cjs",
            "default": "./dist/ui.modern.js",
            "types": "./dist/index.d.ts"
        },
        "./plugin": {
            "import": "./plugin.js",
            "default": "./dist/plugin.js"
        }
    },
    "main": "./dist/ui.cjs",
    "module": "./dist/ui.esm.js",
    "source": "src/index.ts",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "microbundle --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --globals react/jsx-runtime=jsx --format modern,cjs,esm --css inline --compress false",
        "build-storybook": "storybook build",
        "storybook": "storybook dev --no-open -p 6006"
    },
    "browserslist": [
        "defaults"
    ],
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": true
    },
    "dependencies": {
        "@radix-ui/react-alert-dialog": "^1.1.1",
        "@radix-ui/react-checkbox": "^1.1.1",
        "@radix-ui/react-collapsible": "^1.1.0",
        "@radix-ui/react-dialog": "^1.1.1",
        "@radix-ui/react-dropdown-menu": "^2.1.1",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-radio-group": "^1.2.0",
        "@radix-ui/react-select": "^2.1.1",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-switch": "^1.1.0",
        "@radix-ui/react-tabs": "^1.1.0",
        "@radix-ui/react-toast": "^1.2.1",
        "@radix-ui/react-toggle": "^1.1.0",
        "@radix-ui/react-toggle-group": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.2",
        "class-variance-authority": "^0.7.0",
        "lucide-react": "^0.428.0",
        "react-hook-form": "^7.52.2",
        "tailwind-merge": "^2.5.2"
    },
    "devDependencies": {
        "@fontsource-variable/inter": "^5.0.20",
        "@storybook/addon-essentials": "^8.2.9",
        "@storybook/react": "^8.2.9",
        "@storybook/react-vite": "^8.2.9",
        "@types/react-dom": "^18.3.0",
        "microbundle": "^0.15.1",
        "storybook": "^8.2.9",
        "tailwind": "^4.0.0",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.5.4"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*",
        "lucide-react": "*",
        "tailwindcss": "*"
    },
    "postcss": {
        "plugins": {
            "tailwindcss": {}
        }
    }
}