{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "es6"],
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "target": "ES5",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "jsx": "preserve",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
